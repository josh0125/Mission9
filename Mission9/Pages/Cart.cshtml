@page
@model Mission9.Pages.CartModel
@{
}


<div>
    <h2>Your Cart</h2>

    <table class="table table-bordered table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">SubTotal</th>
            </tr>

        </thead>

        <tbody>
            @foreach(var i in Model.basket.Items)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Book.Author</td>
                    <td>@((i.Book.Price).ToString("c"))</td>
                    <td>@i.Quantity</td>
                    <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>

                    <td class="text-center">
                        <form method="post" asp-page-handler="Remove">
                            <input name="bookId" type="hidden" value="@i.Book.BookId" /> 
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="4">Total:</td>
                <td>@Model.basket.CalculateTotal().ToString("c")</td> 
            </tr>
        </tfoot>
    </table>


    <div>
        <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
        <a class="btn btn-primary" asp-action="Checkout" asp-controller="Purchase">Checkout</a>
    </div>

</div>