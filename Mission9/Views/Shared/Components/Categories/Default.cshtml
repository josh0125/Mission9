
@{
}

@model IEnumerable<string>
<div class="p-2">
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle btn-block " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a asp-controller="Home" asp-action="Index" asp-route-bookType="" asp-route-pageNum="1" class="btn btn-outline-secondary btn-block">All</a>
            @foreach (string c in Model)
            {
                <a asp-controller="Home" asp-action="Index" asp-route-bookType="@c" asp-route-pageNum="1" class="btn btn-block dropdown-item @(ViewBag.SelectedCategory == c ? "btn-primary" :  "btn-outline-secondary")">
                    @c
                </a>
            }
        </div>
    </div>
</div>

